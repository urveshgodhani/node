  <body>
    <h3>Edit Student</h3>
    <form action="/edit" method="post">
      <input type="hidden" name="_id" value="<%= details._id %>" />
      First Name :
      <input type="text" name="firstname" value="<%= details.firstname %>" />
      <br /><br />
      Last Name :
      <input type="text" name="lastname" value="<%= details.lastname %>" />
      <br /><br />
      Email :<input type="text" name="email" value="<%= details.email %>" />
      <br /><br />
      <input type="submit" value="Edit" />
    </form>
  </body>
</html>
